<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/random_background"
    android:orientation="vertical"
    tools:context=".AddExpense">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="176dp">


            <TextView
                android:id="@+id/tvAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="128dp"
                android:text="Add Expense"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="BudgetExchange"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.722"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="536dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/exAmount"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn"
                android:elevation="5dp"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/tertiary_text_light" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:hint="Type"
                />

            <EditText
                android:id="@+id/exDate"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="5dp"
                android:hint="Date: dd/MM/yyyy"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/tertiary_text_light" />

            <EditText
                android:id="@+id/description"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:elevation="5dp"
                android:hint="Optional description"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/tertiary_text_light" />

            <Button
                android:id="@+id/enter"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/enterbtn"
                android:elevation="5dp"
                android:text="Enter"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>


        <ScrollView
            android:id="@+id/AddBar"
            android:layout_width="match_parent"
            android:layout_height="201dp" />


    </LinearLayout>

</LinearLayout>
